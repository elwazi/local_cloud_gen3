worker_processes 4;
worker_rlimit_nofile 40000;

events {
    worker_connections 8192;
}

stream {
    upstream rancher_servers_http {
        least_conn;
{% for node in groups['rancher_rke2_worker_nodes'] %}
        server {{ hostvars[node]['ansible_default_ipv4']['address'] }}:80 max_fails=3 fail_timeout=5s;
{% endfor %}
    }
    server {
        listen 80;
        proxy_pass rancher_servers_http;
    }

    upstream rancher_servers_https {
        least_conn;
{% for node in groups['rancher_rke2_worker_nodes'] %}
        server {{ hostvars[node]['ansible_default_ipv4']['address'] }}:443 max_fails=3 fail_timeout=5s;
{% endfor %}
    }
    server {
        listen     443;
        proxy_pass rancher_servers_https;
    }
}
